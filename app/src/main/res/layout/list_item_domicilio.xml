<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/list_item_domicilio_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="center_vertical"
        android:buttonTint="@color/colorSecundaryText"
        tools:src="@drawable/ic_home_black_24px" />

    <TextView
        android:id="@+id/list_item_domicilio_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:textAllCaps="true"
        android:textStyle="bold"
        tools:text="Domicilio" />

    <ImageView
        android:id="@+id/list_item_domicilio_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginRight="@dimen/horizontal_margin"
        android:src="@drawable/ic_arrow_down" />

</LinearLayout>
